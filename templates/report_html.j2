<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Network Devices Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .section-title {
            font-size: 1.2em;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Network Devices Report</h1>

    {% for host, stdout_lines in eos_np_output.items() %}
    <div class="section">
        <div class="section-title">{{ host }}</div>
        <table>
            <thead>
                <tr>
                    <th>Port</th>
                    <th>FCS</th>
                    <th>Align</th>
                    <th>Symbol</th>
                    <th>Rx</th>
                    <th>Runts</th>
                    <th>Giants</th>
                    <th>Tx</th>
                </tr>
            </thead>
            <tbody>
                {% for line in stdout_lines[1:] %}
                <tr>
                    {% for item in line.split() %}
                    <td>{{ item }}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endfor %}
</body>
</html>

